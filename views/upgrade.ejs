<script>
document.addEventListener('DOMContentLoaded', function() {
    var modal = document.getElementById('customModal');
    var closeBtn = document.getElementById('closeModal');
    var upgradeButtons = document.querySelectorAll('._upgrade_');
    
    upgradeButtons.forEach(function(button) {
        button.addEventListener('click', function() {
            var amount = this.getAttribute('amt');
            var pck = this.getAttribute('pck');
            
            document.getElementById('modalPackageDetails').innerHTML = 
                'Selected Package: <strong>' + pck + '</strong> ($' + amount + ')';
            
            modal.style.display = 'block';
            modal.classList.add('fade-in');
        });
    });
    
    closeBtn.addEventListener('click', function() {
        modal.style.display = 'none';
        modal.classList.remove('fade-in');
    });
    
    window.addEventListener('click', function(event) {
        if (event.target == modal) {
            modal.style.display = 'none';
            modal.classList.remove('fade-in');
        }
    });
});
</script>